	keywords = {Atmospheric dynamics, Physical oceanography},
	pages = {571--576},
	file = {Snapshot:/home/shawn/.zotero/zotero/akum4qwh.default/zotero/storage/6WUXHF5U/nclimate1840.html:text/html}
}

