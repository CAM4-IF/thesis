	journal = {Journal of the Atmospheric Sciences},
	author = {Sobel, Adam H. and Nilsson, Johan and Polvani, Lorenzo M.},
	month = dec,
	year = {2001},
	pages = {3650--3665},
	file = {Full Text PDF:/home/shawn/.zotero/zotero/akum4qwh.default/zotero/storage/24TU2FRS/Sobel et al. - 2001 - The Weak Temperature Gradient Approximation and Ba.pdf:application/pdf;Snapshot:/home/shawn/.zotero/zotero/akum4qwh.default/zotero/storage/DM3GPGCC/1520-0469(2001)0583650TWTGAA2.0.html:text/html}
}

