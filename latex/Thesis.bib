	pages = {1892--1911},
	file = {Full Text PDF:/home/shawn/.zotero/zotero/akum4qwh.default/zotero/storage/PGTPP2NU/Vial et al. - 2016 - Coupling between lower-tropospheric convective mix.pdf:application/pdf;Snapshot:/home/shawn/.zotero/zotero/akum4qwh.default/zotero/storage/JAKQZZX8/abstract.html:text/html}
